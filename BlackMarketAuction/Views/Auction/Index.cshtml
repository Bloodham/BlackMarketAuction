    -->


@{
    ViewBag.Title = "Index";
}

<h2>Browse Categories</h2>
<p>
    Select from one of the @Model.Count() categories:
</p>
<ul>
    @foreach (Category item in Model)
    {
        <li>@Html.ActionLink(item.Name, "Browse", new { Category = item.Name })</li>
    }
</ul>
